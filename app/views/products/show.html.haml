%header
  = render 'shared/sub-header'
%section
  .product-details
    .product-details__title
      = @product.name
    .details  
      .details__photo
        .details__photo__main
        = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_2.jpg?1569592534",class:"details__photo__main__image"
        .details__photo__under
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_2.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_3.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_6.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_3.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_1.jpg?1569592534",class:"details__photo__under__image"
        .details__photo__under
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_2.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_3.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_6.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_3.jpg?1569592534",class:"details__photo__under__image"
          = image_tag "https://static.mercdn.net/item/detail/orig/photos/m51342419699_1.jpg?1569592534",class:"details__photo__under__image"

      %table.list
        %tbody
          %tr
            %th 出品者
            %td.list__name
              = @product.seller_id
              .list__icon 
                .list__icon__good
                  = fa_icon "fa laugh"
                  10
                .list__icon__better
                  = fa_icon "fa meh"
                  1
                .list__icon__bad
                  = fa_icon "fa frown"
                  0
          %tr
            %th カテゴリー
            %td
              %a= @product.category.name
          %tr
            %th ブランド
            %td= @product.brand.name
          %tr
            %th 商品サイズ
            %td= @product.size_id
          %tr
            %th 商品の状態
            %td= @product.state.name
          %tr
            %th 配送料の負担
            %td= @product.paying_side.name
          %tr
            %th 配送の方法
            %td= @product.delivery_method.name
          %tr
            %th 配送元地域
            %td 
              %a= @product.prefecture.name
          %tr
            %th 配送日の目安
            %td= @product.delivery_day.name
    .pricebox
      %span.pricebox__price
        = "¥#{@product.price.to_s(:delimited, delimiter: ',')}"
      %span.pricebox__tax
        (税込)
      %span.pricebox__postage
        送料込み
    .buybtn
      .buybtn__next
        購入画面に進む
    .commentbox
      .commentbox__text
        = @product.description
    .underlist
      .underlist__box
        .underlist__box__iine
          = fa_icon "fal heart"
          いいね！ 0
        .underlist__box__report
          = fa_icon "fa flag"
          不適切な商品の報告
      .underlist__box__safety
        = fa_icon "fa unlock-alt"
        あんしん・あんぜんへの取り組み



%footer
  = render 'shared/sub-footer'