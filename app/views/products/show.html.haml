%header
  = render 'shared/sub-header'
%section
  .product-details
    .product-details__title
      = @product.name
    .details  
      .details__photo
        .details__photo__main
        = image_tag @images[0].name.url,class:"details__photo__main__image"
        .details__photo__under
        - @images.each_with_index do |image, index|
          = image_tag @images[index].name.url,class:"details__photo__under__image" 
          
      %table.list
        %tbody
          %tr
            %th 出品者
            %td.list__name 
              = link_to "#",class:"list__name" do
                = @product.seller.nickname
              .list__icon 
                .list__icon__good
                  = fa_icon "fa laugh"
                  10
                .list__icon__better
                  = fa_icon "fa meh"
                  1
                .list__icon__bad
                  = fa_icon "fa frown"
                  0
          %tr
            %th カテゴリー
            %td
              %a= @product.category.name
            %td.category
              = link_to "#",class:"list__name__blue" do
                = @category_parent
              = link_to "#",class:"list__name__blue" do
                .list__name__blue
                  = fa_icon "chevron-right"
                  = @category_child
              - if @product.category
                = link_to "#",class:"list__name__blue" do
                  .list__name__blue
                    = fa_icon "chevron-right"
                    = @product.category.name
          - if @product.brand.nil?
            %tr
              %th ブランド
              %td
          - else 
            %tr
              %th ブランド 
              %td= @product.brand.name
          - if @product.size.nil?
            %tr
              %th 商品サイズ
              %td
          - else
            %tr
              %th 商品サイズ
              %td= @product.size.name
          %tr
            %th 商品の状態
            %td= @product.state.name
          %tr
            %th 配送料の負担
            %td= @product.paying_side.name
          %tr
            %th 配送の方法
            %td= @product.delivery_method.name
          %tr
            %th 配送元地域
            %td.list__name
              = link_to "#",class:"list__name" do
                = @product.prefecture.name
          %tr
            %th 配送日の目安
            %td= @product.delivery_day.name
    .pricebox
      %span.pricebox__price
        = "¥#{@product.price.to_s(:delimited, delimiter: ',')}"
      %span.pricebox__tax
        (税込)
      %span.pricebox__postage
        - if @product.paying_side_id == 1
          送料込み
        - else
          着払い
    - if current_user.id != @product.seller_id
      = link_to'#',class:"buybtn" do
        .buybtn__next
          購入画面に進む
    .commentbox
      .commentbox__text
        = @product.description
    - if current_user.id != @product.seller_id
      .underlist
        .underlist__box
          .underlist__box__iine
            = fa_icon "fal heart"
            いいね！ 0
          .underlist__box__report
            = fa_icon "fa flag"
            不適切な商品の報告
        .underlist__box__safety
          = fa_icon "fa unlock-alt"
          あんしん・あんぜんへの取り組み

%footer
  = render 'shared/sub-footer'