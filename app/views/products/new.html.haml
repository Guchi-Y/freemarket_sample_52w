%header
  = render 'shared/sub-header'
%section.sell-container
  .sell-container__head
    商品の情報を入力
  %form.sell-container__form
    .upload-box
      .upload-box__head
        出品画像
        %span.entry-content__require
          必須
      %p
        最大10枚までアップロードできます
      .upload-box__drop-box
        %input.upload-box__drop-box__file{type: "file", name: "name"}
        .upload-box__drop-box__text
          ドラッグアンドドロップ
          %br
          またはクリックしてファイルをアップロード
    .sell-content
      .sell-content__group
        %label.entry-content__text
          商品名
        %span.entry-content__require
          必須
        %input.entry-content__input-default{type: "text",value_name:"name",placeholder:"商品名（必須 40文字まで)"}
      .sell-content__group
        %label.entry-content__text
          商品の説明
        %span.entry-content__require
          必須
        %textarea.entry-content__textarea-default{rows: "5",value_name:"description",placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"}
    .sell-content--flex
      .sell-content__head
        商品の詳細
      .sell-content__form-box
        .sell-content__group
          %label.entry-content__text
            カテゴリー
          %span.entry-content__require
            必須
          .entry-content__select-box
            = fa_icon 'chevron-down'
            %select.entry-content__select-default 
              %option{valu: ""} ---
              %option{valu: ""} レディース
              %option{valu: ""} メンズ
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
              %option{valu: ""} ---
        .sell-content__group
          %label.entry-content__text
            商品の状態
          %span.entry-content__require
            必須
          .entry-content__select-box
            = fa_icon 'chevron-down'
            %select.entry-content__select-default 
              %option{valu: ""} ---
              %option{valu: ""} 新品、未使用
              %option{valu: ""} 未使用に近い
              %option{valu: ""} 目立った傷や汚れなし
              %option{valu: ""} やや傷や汚れあり
              %option{valu: ""} 傷や汚れあり
              %option{valu: ""} 全体的に状態が悪い
    .sell-content--flex
      .sell-content__head
        配送について
        =link_to '?', "#", {class: 'form-question', target: '_blank'}
      .sell-content__form-box
        .sell-content__group
          %label.entry-content__text
            配送料の負担
          %span.entry-content__require
            必須
          .entry-content__select-box
            = fa_icon 'chevron-down'
            %select.entry-content__select-default 
              %option{valu: ""} ---
              %option{valu: ""} 送料込み(出品者負担)
              %option{valu: ""} 着払い(購入者負担)
        .sell-content__group
          %label.entry-content__text
            発送元の地域
          %span.entry-content__require
            必須
          .entry-content__select-box
            = fa_icon 'chevron-down'
            %select.entry-content__select-default 
              %option{valu: ""} ---
              %option{valu: ""} 北海道
              %option{valu: ""} 青森県
              %option{valu: ""} 岩手県
              %option{valu: ""} 宮城県
              %option{valu: ""} 秋田県
              %option{valu: ""} 山形県
        .sell-content__group
          %label.entry-content__text
            発送までの日数
          %span.entry-content__require
            必須
          .entry-content__select-box
            = fa_icon 'chevron-down'
            %select.entry-content__select-default 
              %option{valu: ""} ---
              %option{valu: ""} 1~2日で発送
              %option{valu: ""} 2~3日で発送
              %option{valu: ""} 4~7日で発送
    .selling-price
      .selling-price__head
        販売価格(300〜9,999,999)
        =link_to '?', "#", {class: 'form-question', target: '_blank'}
      .selling-price__form-box
        .selling-price__group
          .selling-price__group__left
            %label.entry-content__text
              価格
            %span.entry-content__require
              必須
          .selling-price__group__right
            ¥
            %input.entry-content__input-default#sales-price{value_name:"price",placeholder:"例）300"}
        .selling-price__group--thin
          .selling-price__group__left
            販売手数料 (10%)
          .selling-price__group__right 
            %span#sales-fee -
        .selling-price__group--bold
          .selling-price__group--bold__left
            販売利益
          .selling-price__group--bold__right 
            %span#sales-profit -
    .sell-btn-box
      .sell-btn-box__text
        %p
          =link_to '禁止されている出品', "https://www.mercari.com/jp/help_center/getting_started/prohibited_items/", target: '_blank'
          、
          =link_to '行為', "https://www.mercari.com/jp/help_center/getting_started/prohibited_conduct/", target: '_blank'
          を必ずご確認ください。
        %p
          またブランド品でシリアルナンバー等がある場合はご記載ください。
          =link_to '偽ブランドの販売', "https://www.mercari.com/jp/help_center/getting_started/counterfeit_goods/", target: '_blank'
          は犯罪であり処罰される可能性があります。
        %p
          また、出品をもちまして
          =link_to '加盟店規約', "https://www.mercari.com/jp/seller_terms/", target: '_blank'
          に同意したことになります。
      %button.sell-btn-box__submit
        出品する
      =link_to 'もどる', 'javascript:history.back();', class:'sell-btn-box__return'

%footer
  = render 'shared/sub-footer'