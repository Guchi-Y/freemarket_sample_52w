.main-header
  .main-header__top
    %h1
      = link_to root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2508029365", alt: "mercari"
    %form.main-header__top--form{ action: "https //www.mercari.com/jp/search/"}
      %input.input-default{ name: "keyword",  placeholder: "何かお探しですか？",  type: "search",  value: ""}/
      %i.fas.fa-search
  .main-header__under
    %nav.main-header__under--left
      %ul.main-header__under--left--nav
        %li
          %h2
            = link_to "" do
              %i.fas.fa-list
              %span カテゴリーから探す
        %li
          %h2
            = link_to "" do
              %i.fas.fa-tag
              %span ブランドから探す
            
    %ul.main-header__under--right
      -if user_signed_in?
        %li
          %i.far.fa-bell
          %span お知らせ
        %li
          %i.fa.fa-check
          %span やることリスト
        %li
          =link_to user_mypage_path(current_user) do
            = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", class: "face"
            %span マイページ
      -else
        %li.new
          = link_to new_signup_path(current_user) do
            %span 新規会員登録
        %li.logged
          = link_to new_user_session_path(current_user) do
            %span ログイン
%ul.category-meun
  %ul.category-meun__left
    -@products.each_with_index do |parent_product, m|
      .category-meun__left__parent{class: "#{parent_product.name}"}
        = parent_product.name
  %ul.category-meun__center
    -@products.each_with_index do |parent_product, m|
      .parent{class: "#{parent_product.name}"}
        -parent_product.children.each_with_index do |child_product, i|
          .category-meun__center__children{class: "#{i}"}
            = child_product.name
  %ul.category-meun__right
    -@products.each_with_index do |parent_product, m|
      -parent_product.children.each_with_index do |child_product, i|
        .child{class: "#{child_product.name}"}
          -child_product.children.each_with_index do |grand_product, n|
            .category-meun__right__grandchildren{class: "#{n}"}
              = grand_product.name
    
    