= stylesheet_link_tag  'progress_bar/third', media: 'all'
%header
  = render 'shared/signup-header'
%section 
  .customer-entry
    .customer-entry__top
      発送元・お届け先住所入力
    .customer-entry__body
      .customer-entry__body__form
        .entry-content
          %label.entry-content__text お名前
          %span.entry-content__require 必須
          %input.entry-content__input-default{type: "text",value_name:"last_name",placeholder:"例)山田"}
          %input.entry-content__input-default{type: "text",value_name:"first_name",placeholder:"例)彩"}
        .entry-content
          %label.entry-content__text お名前カナ
          %span.entry-content__require 必須
          %input.entry-content__input-default{type: "text",value_name:"last_name_kana",placeholder:"例)ヤマダ"}
          %input.entry-content__input-default{type: "text",value_name:"first_name_kana",placeholder:"例)アヤ"}
        .entry-content
          %label.entry-content__text 郵便番号
          %span.entry-content__require 必須
          %input.entry-content__input-default{type: "text",value_name:"postcode",placeholder:"例)123-4567"}
        .entry-content
          %label.entry-content__text 都道府県
          %span.entry-content__require 必須
          %input.entry-content__input-default{type: "text",value_name:"prefecture_id",placeholder:"北海道"}
        .entry-content
          %label.entry-content__text 市区町村
          %span.entry-content__require 必須
          %input.entry-content__input-default{type: "text",value_name:"city",placeholder:"例)横浜市緑区"}
        .entry-content
          %label.entry-content__text 番地
          %span.entry-content__require 必須
          %input.entry-content__input-default{type: "text",value_name:"block",placeholder:"例)青山1-1-1"}
        .entry-content
          %label.entry-content__text 建物名
          %span.entry-content__any 任意
          %input.entry-content__input-default{type: "text",value_name:"building",placeholder:"例)柳ビル103"}
        .entry-content
          %label.entry-content__text 電話番号
          %span.entry-content__any 任意
          %input.entry-content__input-default{type: "text",value_name:"phone_number",placeholder:"例)09012345678"}
        =link_to "#", class: "entry-bottom__next__btn" do
          .entry-bottom__next
            次へ進む

%footer
  = render 'shared/sub-footer'